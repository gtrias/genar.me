---

<div class="terminal-crt-effects scanlines">
  <div class="scanline-moving"></div>
  <div class="scanline-static"></div>
  <div class="glitch-overlay"></div>
</div>

<script>
  import { CRTEffects } from '../terminal/effects/CRTEffects';
  import { defaultThemeConfig } from '../terminal/config/ThemeConfig';
  import { defaultDeviceConfig } from '../terminal/config/DeviceConfig';

  document.addEventListener('DOMContentLoaded', async () => {
    // CRT effects are now handled by TerminalManager
    // This component serves as a placeholder for any CRT-specific UI
    // and can be extended for custom visual effects
    console.log('CRTEffects component loaded');
    
    // Add rare random glitches to the entire page
    if (!defaultDeviceConfig.mobileRegex.test(navigator.userAgent)) {
      startPageGlitches();
    }
  });
  
  function startPageGlitches() {
    setInterval(() => {
      if (Math.random() < 0.01) { // 1% chance every interval
        const body = document.body;
        body.classList.add('random-glitch');
        setTimeout(() => {
          body.classList.remove('random-glitch');
        }, 200);
      }
    }, 5000); // Check every 5 seconds
  }
</script>

<style>
  .terminal-crt-effects {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 9997;
  }

  /* Dual scanline system: moving + static pattern */
  .scanlines {
    position: relative;
    overflow: hidden;
  }

  /* Moving scanline - single line traveling down the screen */
  .scanline-moving {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 0.2rem;
    background: rgba(0, 0, 0, 0.25);
    z-index: 2147483649;
    opacity: 0.75;
    animation: scan-moving 6s linear infinite;
  }

  /* Static scanlines - pattern overlay with animated position for flicker */
  .scanline-static {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: linear-gradient(
      to bottom,
      transparent 50%,
      rgba(0, 0, 0, 0.25) 51%
    );
    background-size: 100% 0.4rem;
    z-index: 2147483648;
    animation: scan-crt 1s steps(60) infinite;
  }

  @keyframes scan-moving {
    0% {
      transform: translate3d(0, 100vh, 0);
    }
  }

  @keyframes scan-crt {
    0% {
      background-position: 0 50%;
    }
  }

  .glitch-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.1) 2px,
      rgba(0, 0, 0, 0.1) 4px
    );
    opacity: 0.05;
  }

  /* Random glitch effect */
  :global(.random-glitch) {
    animation: random-glitch 0.2s ease-in-out;
  }

  @keyframes random-glitch {
    0%, 100% {
      transform: translate(0);
      filter: hue-rotate(0deg);
    }
    20% {
      transform: translate(-2px, 2px);
      filter: hue-rotate(90deg);
    }
    40% {
      transform: translate(-2px, -2px);
      filter: hue-rotate(180deg);
    }
    60% {
      transform: translate(2px, 2px);
      filter: hue-rotate(270deg);
    }
    80% {
      transform: translate(2px, -2px);
      filter: hue-rotate(360deg);
    }
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .scanline-moving {
      height: 0.1rem;
      animation-duration: 8s;
      opacity: 0.5;
    }
    
    .scanline-static {
      background-size: 100% 0.2rem;
      opacity: 0.3;
    }
    
    .glitch-overlay {
      opacity: 0.02;
    }
  }
</style>