---
export interface Props {
	class?: string;
	children: any;
	border?: 'cyan' | 'pink' | 'purple';
	glow?: boolean;
	distort?: boolean;
	padding?: 'sm' | 'md' | 'lg';
}

const { 
	class: className = "", 
	children, 
	border = "cyan",
	glow = true,
	distort = true,
	padding = "md"
} = Astro.props;

const borderClasses = {
	cyan: "neon-border-cyan",
	pink: "neon-border-pink",
	purple: "neon-border-purple"
};

const paddingClasses = {
	sm: "p-4",
	md: "p-6",
	lg: "p-8"
};

const cardClass = `cyber-card ${borderClasses[border]} ${paddingClasses[padding]} ${glow ? 'crt-glow' : ''} ${distort ? 'crt-distort' : ''} ${className}`;
---

<div class={cardClass}>
	{children}
</div>