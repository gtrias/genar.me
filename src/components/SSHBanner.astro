---
// SSH Banner component - Advertises SSH access to portfolio
---

<div id="ssh-banner" class="ssh-banner">
  <div class="ssh-banner-content">
    <div class="ssh-icon">üîê</div>
    <div class="ssh-text">
      <span class="ssh-label">Power users:</span>
      <code class="ssh-command">ssh localhost -p 23234</code>
      <span class="ssh-hint">(or deploy to access remotely)</span>
    </div>
    <button id="ssh-banner-close" class="ssh-close" aria-label="Close banner">
      ‚úï
    </button>
  </div>
</div>

<style>
  .ssh-banner {
    position: fixed;
    top: 1rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9999;
    animation: slideDown 0.5s ease-out;
    max-width: 90%;
  }

  @keyframes slideDown {
    from {
      transform: translate(-50%, -100%);
      opacity: 0;
    }
    to {
      transform: translate(-50%, 0);
      opacity: 1;
    }
  }

  .ssh-banner.hidden {
    animation: slideUp 0.3s ease-in;
    animation-fill-mode: forwards;
  }

  @keyframes slideUp {
    from {
      transform: translate(-50%, 0);
      opacity: 1;
    }
    to {
      transform: translate(-50%, -100%);
      opacity: 0;
    }
  }

  .ssh-banner-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1.5rem;
    background: rgba(34, 233, 216, 0.1);
    border: 2px solid var(--cyan, #22e9d8);
    border-radius: 0.5rem;
    backdrop-filter: blur(10px);
    box-shadow:
      0 0 20px rgba(34, 233, 216, 0.3),
      0 0 40px rgba(34, 233, 216, 0.1);
  }

  .ssh-icon {
    font-size: 1.5rem;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .ssh-text {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    font-size: 0.9rem;
  }

  .ssh-label {
    color: var(--cyan, #22e9d8);
    font-weight: bold;
  }

  .ssh-command {
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid var(--pink, #e34880);
    border-radius: 0.25rem;
    padding: 0.25rem 0.75rem;
    color: var(--pink, #e34880);
    font-family: 'Courier New', monospace;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.2s;
    user-select: all;
  }

  .ssh-command:hover {
    background: rgba(227, 72, 128, 0.2);
    box-shadow: 0 0 10px rgba(227, 72, 128, 0.5);
    transform: scale(1.05);
  }

  .ssh-hint {
    color: var(--dim, #9ca3af);
    font-size: 0.85rem;
    font-style: italic;
  }

  .ssh-close {
    background: none;
    border: none;
    color: var(--cyan, #22e9d8);
    font-size: 1.2rem;
    cursor: pointer;
    padding: 0.25rem 0.5rem;
    opacity: 0.7;
    transition: opacity 0.2s;
    margin-left: auto;
  }

  .ssh-close:hover {
    opacity: 1;
  }

  /* Mobile responsive */
  @media (max-width: 640px) {
    .ssh-banner {
      top: 0.5rem;
      max-width: 95%;
    }

    .ssh-banner-content {
      flex-direction: column;
      padding: 0.5rem 1rem;
      gap: 0.5rem;
    }

    .ssh-text {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
      font-size: 0.8rem;
    }

    .ssh-icon {
      font-size: 1.2rem;
    }

    .ssh-close {
      position: absolute;
      top: 0.5rem;
      right: 0.5rem;
    }
  }
</style>

<script>
  // Handle banner close
  const banner = document.getElementById('ssh-banner');
  const closeBtn = document.getElementById('ssh-banner-close');
  const command = document.querySelector('.ssh-command');

  // Check if banner was previously dismissed
  const dismissed = localStorage.getItem('ssh-banner-dismissed');
  if (dismissed === 'true') {
    banner?.classList.add('hidden');
    setTimeout(() => {
      banner?.remove();
    }, 300);
  }

  // Close banner
  closeBtn?.addEventListener('click', () => {
    banner?.classList.add('hidden');
    localStorage.setItem('ssh-banner-dismissed', 'true');
    setTimeout(() => {
      banner?.remove();
    }, 300);
  });

  // Copy command on click
  command?.addEventListener('click', async () => {
    const text = command.textContent || '';
    try {
      await navigator.clipboard.writeText(text);
      const originalText = command.textContent;
      command.textContent = '‚úì Copied!';
      setTimeout(() => {
        command.textContent = originalText;
      }, 2000);
    } catch (err) {
      // Fallback for older browsers
      const selection = window.getSelection();
      const range = document.createRange();
      range.selectNodeContents(command);
      selection?.removeAllRanges();
      selection?.addRange(range);
    }
  });

  // Auto-dismiss after 30 seconds if not interacted with
  setTimeout(() => {
    if (!banner?.classList.contains('hidden')) {
      banner?.classList.add('hidden');
      setTimeout(() => {
        banner?.remove();
      }, 300);
    }
  }, 30000);
</script>
