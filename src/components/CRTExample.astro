---
// Example usage of CRT components
// This file demonstrates how to use the CRT component system
import CRTMonitor from '../components/CRTMonitor.astro';
import CRTCard from '../components/CRTCard.astro';
import CRTText from '../components/CRTText.astro';
---

<CRTMonitor>
	<div class="prose prose-lg max-w-none p-4">
		<CRTText color="cyan" size="3xl" as="h1" class="font-bold mb-6">
			CRT Component Demo
		</CRTText>

		<CRTCard border="pink" class="mb-6">
			<CRTText color="pink" size="2xl" as="h2" class="font-bold mb-4">
				Available Components
			</CRTText>
			
			<ul>
				<li><CRTText color="cyan">CRTMonitor</CRTText> - Main container with monitor frame</li>
				<li><CRTText color="cyan">CRTCard</CRTText> - Card with glow and border effects</li>
				<li><CRTText color="cyan">CRTText</CRTText> - Text with chromatic aberration</li>
				<li><CRTText color="cyan">CRTEffects</CRTText> - Overlay effects (auto-included)</li>
			</ul>
		</CRTCard>

		<CRTCard border="purple" glow={true} distort={true}>
			<CRTText color="purple" size="xl" as="h3" class="font-bold mb-3">
				Features
			</CRTText>
			<p>All components support:</p>
			<ul>
				<li>Multiple color themes (cyan, pink, purple)</li>
				<li>Configurable sizes</li>
				<li>Optional glow and distortion effects</li>
				<li>Fully responsive design</li>
			</ul>
		</CRTCard>
	</div>
</CRTMonitor>