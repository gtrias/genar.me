---
import '../styles/global.css';
import CRTEffects from '../components/CRTEffects.astro';
import { personalLinks, getDisplayName } from '../data/links';

const { title = "Genar Trias - Personal website", description = "Genar Trias personal website", showFooter = true, showHeader = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content={description} />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body class="crt-container">
	<div class="grid-overlay"></div>
	<CRTEffects />

	{showHeader && (
	<nav style="background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(10, 10, 15, 0.9));" class="p-4 border-b-2 neon-border-cyan">
		<div class="container mx-auto flex justify-between items-center">
			<a href="/" class="text-2xl font-mono font-bold neon-text-cyan glitch tracking-wider">genar.me</a>
			<div class="flex space-x-6 font-mono">
				<a href="/" class="transition-colors">~<span class="neon-text-cyan">/</span></a>
				<a href="/projects" class="transition-colors">src<span class="neon-text-cyan">/</span></a>
				<a href="/com" class="transition-colors">com<span class="neon-text-cyan">/</span></a>
				<a href="/dev" class="transition-colors">dev<span class="neon-text-cyan">/</span></a>
				<a href="/sys" class="transition-colors">sys<span class="neon-text-cyan">/</span></a>
				<a href="/blog" class="transition-colors">blog<span class="neon-text-cyan">/</span></a>
			</div>
		</div>
	</nav>
)}

	<main class="container mx-auto p-6 max-w-4xl relative z-10">
		<slot />
	</main>

	{showFooter && (
	<footer style="background: linear-gradient(135deg, rgba(10, 10, 15, 0.9), rgba(139, 92, 246, 0.2));" class="mt-12 p-6 border-t-2 neon-border-pink">
		<div class="container mx-auto max-w-4xl">
			<div class="flex justify-between items-center">
				<p class="neon-text-pink font-mono">&copy; 2025 Genar Trias</p>
				<div class="flex space-x-4 font-mono">
					{personalLinks.map((link) => (
						<a href={link.url}>[ {getDisplayName(link)} ]</a>
					))}
				</div>
			</div>
		</div>
	</footer>
)}
</body>
</html>